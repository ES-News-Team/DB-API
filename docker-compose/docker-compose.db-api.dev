
services:
  db-api:
    build:
      context: ../docker
      dockerfile: Dockerfile.db-api.dev
    container_name: db-api
    expose: 
      - 5002
    ports:
      - 5002:5002
    command: python run.py
  
  mariadb:
    image: mariadb:latest
    environment:
      - MYSQL_ROOT_PASSWORD=1234567890
      - MYSQL_DATABASE=esnews
    volumes:
      - db-api-mariadb:/var/lib/mysql
    